<UserControl x:Class="WpfCQRSDemo.Views.TicTacToeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Tic Tac Toe" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Game Info Panel -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="15" Margin="0,0,0,20" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Your Info -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="You" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <Border Width="50" Height="50" CornerRadius="25">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding MyMark}" Value="X">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding MyMark}" Value="O">
                                        <Setter Property="Background" Value="#FCE4EC"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding MyMark}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#1976D2"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MyMark}" Value="O">
                                            <Setter Property="Foreground" Value="#C2185B"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </StackPanel>

                <!-- VS Indicator -->
                <TextBlock Grid.Column="1" Text="VS" FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="20,0" Foreground="Gray"/>

                <!-- Opponent Info -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding OpponentName, FallbackValue='Opponent'}" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,5"
                               MaxWidth="100"
                               TextTrimming="CharacterEllipsis"/>
                    <Border Width="50" Height="50" CornerRadius="25">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#FCE4EC"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding MyMark}" Value="O">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock FontSize="28" FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="O"/>
                                    <Setter Property="Foreground" Value="#C2185B"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MyMark}" Value="O">
                                            <Setter Property="Text" Value="X"/>
                                            <Setter Property="Foreground" Value="#1976D2"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Game Board -->
        <Grid Grid.Row="2" Width="240" Height="240" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Row="0" Grid.Column="0" Command="{Binding CellClickCommand}" CommandParameter="1,1" Content="{Binding Board[0][0]}" FontSize="36" FontWeight="Bold" Margin="3"/>
            <Button Grid.Row="0" Grid.Column="1" Command="{Binding CellClickCommand}" CommandParameter="1,2" Content="{Binding Board[0][1]}" FontSize="36" FontWeight="Bold" Margin="3"/>
            <Button Grid.Row="0" Grid.Column="2" Command="{Binding CellClickCommand}" CommandParameter="1,3" Content="{Binding Board[0][2]}" FontSize="36" FontWeight="Bold" Margin="3"/>
            <Button Grid.Row="1" Grid.Column="0" Command="{Binding CellClickCommand}" CommandParameter="2,1" Content="{Binding Board[1][0]}" FontSize="36" FontWeight="Bold" Margin="3"/>
            <Button Grid.Row="1" Grid.Column="1" Command="{Binding CellClickCommand}" CommandParameter="2,2" Content="{Binding Board[1][1]}" FontSize="36" FontWeight="Bold" Margin="3"/>
            <Button Grid.Row="1" Grid.Column="2" Command="{Binding CellClickCommand}" CommandParameter="2,3" Content="{Binding Board[1][2]}" FontSize="36" FontWeight="Bold" Margin="3"/>
            <Button Grid.Row="2" Grid.Column="0" Command="{Binding CellClickCommand}" CommandParameter="3,1" Content="{Binding Board[2][0]}" FontSize="36" FontWeight="Bold" Margin="3"/>
            <Button Grid.Row="2" Grid.Column="1" Command="{Binding CellClickCommand}" CommandParameter="3,2" Content="{Binding Board[2][1]}" FontSize="36" FontWeight="Bold" Margin="3"/>
            <Button Grid.Row="2" Grid.Column="2" Command="{Binding CellClickCommand}" CommandParameter="3,3" Content="{Binding Board[2][2]}" FontSize="36" FontWeight="Bold" Margin="3"/>
        </Grid>

        <!-- Status Message -->
        <Border Grid.Row="3" Padding="15,10" Margin="0,20,0,0" CornerRadius="5">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#E8F5E9"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMyTurn}" Value="False">
                            <Setter Property="Background" Value="#FFF3E0"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsGameOver}" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Play Again" 
                    Command="{Binding ResetCommand}" 
                    Padding="20,8" 
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsGameOver}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Leave Game" 
                    Command="{Binding LeaveGameCommand}" 
                    Padding="20,8"
                    Background="#F44336"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
